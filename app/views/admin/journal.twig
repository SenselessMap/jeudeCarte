<h2>Journal de bord</h2>
<table style="border-collapse: collapse; width: 100%;">
  <tr>
    <th style="border: 1px solid #000; padding: 6px; text-align: left;">Date</th>
    <th style="border: 1px solid #000; padding: 6px; text-align: left;">Nom</th>
    <th style="border: 1px solid #000; padding: 6px; text-align: left;">IP</th>
    <th style="border: 1px solid #000; padding: 6px; text-align: left;">Page</th>
  </tr>
  {% for log in logs %}
    <tr>
      <td style="border: 1px solid #000; padding: 6px;">{{ log.date }}</td>
      <td style="border: 1px solid #000; padding: 6px;">{{ log.username }}</td>
      <td style="border: 1px solid #000; padding: 6px;">{{ log.ip_address }}</td>
      <td style="border: 1px solid #000; padding: 6px;">{{ log.page_visited }}</td>
    </tr>
  {% endfor %}
</table>
